generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  username String
  password String  @db.VarChar(50)
  createdAt DateTime @default(now())
}

model Washer {
  id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name String
  documentId String
  createdAt DateTime @default(now())
  status Boolean @default(true)
  washes WasherOnWash[]
}

model Wash {
  id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid 
  clientName String
  vehicleType String
  licensePlate String
  washType String
  rate String
  paymentType String
  washers WasherOnWash[]
  status WashStatus
  createdAt DateTime @default(now())
}

model WasherOnWash {
  washerId String @db.Uuid
  washer Washer @relation(fields: [washerId], references: [id])
  washId String @db.Uuid
  wash Wash @relation(fields: [washId], references: [id])

  @@id([washerId, washId])
}

enum WashStatus {
  WAITING
  IN_PROGRESS
  COMPLETED
}
